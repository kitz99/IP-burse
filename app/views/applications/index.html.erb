<h2>Aplicatiile mele</h2>
<br /><br />
<div class="row">
	<div class="col-md-4">
		<h2>Aplicatii in asteptare</h2>
		<% if @waiting.empty? %>
			<p>Nu aveti aplicatii in asteptare in acest moment</p>
		<% else %>
				<% @waiting.each do |app| %>
					<div style="  line-height: 3em; font-size: 1.2em; vertical-align: middle;">
					    <%= app["scholarship"] %> 
					    <span class="pull-right" style="  margin-right: 25px;">
					    	<a href="/applications/<%= app['application'].id %>/edit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i></a>
					    	<a href="/applications/<%= app['application'].id %>/delete" class="btn btn-danger" data-confirm="Are you sure?"><i class="fa fa-trash-o"></i></a>
					    </span>
					</div>
				<% end %>
		<% end %>
	</div>
	<div class="col-md-4">
		<h2>Aplicatii aprobate</h2>
		<% if @accepted.empty? %>
			<p>Nu aveti aplicatii acceptate in acest moment</p>
		<% else %>
			<ul>
				<% @accepted.each do |app| %>
					<li>
					    <%= app["scholarship"] %> 
					</li>
				<% end %>
			</ul>
		<% end %>
	</div>
	<div class="col-md-4">
		<h2>Aplicatii aprobate</h2>
		<% if @rejected.empty? %>
			<p>Nu aveti aplicatii respinse in acest moment</p>
		<% else %>
			<ul>
				<% @rejected.each do |app| %>
					<li>
					    <%= app["scholarship"] %> 
					</li>
				<% end %>
			</ul>
		<% end %>
	</div>
</div>