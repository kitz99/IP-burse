<h1>Define scholarship</h1>
<form action="/define-scholarship" method="post">
	<label> Scholarship Type </label> 
	<div class="field">
		<select name="domain[scholarship_id]" id="selectType">
			<% @scholarships.each do |e| %>
			<option value="<%= e.id %>" 
				<% if @domain.scholarship_id == e.id %> selected <% end %>>
				<%= e.stype%>
			</option>
			<% end %>
		</select>
	</div>

	<label>Sesiune</label>
	<div class="field">
		<select name="domain[period_id]">
			<% @periods.each do |p| %>
			<option value="<%= p.id %>" selected>
				Sesiunea <%= p.id %>
			</option>
			<% end %>  
		</select>
	</div>

	<div id="divParent">
		<label> Document 1 </label>
		<div class="field">
			<input type="text" name="doc1" >
			<input id="btnPlus" value="Plus" type="button">
		</div>
	</div>
	<input type="hidden" value="0"?
	<div class="actions">
		<input value="New" type="submit">
	</div>
	

</form>

<script type="text/javascript">
	$(document).ready(function (){
		var contor = 2;

		$("#selectType").change( function() {
			if($("#selectType").val() == 2) 
			{
				$("#divParent").css('display','none');
			}
			else
			{
				$("#divParent").css('display','block');
			}
		});
		
		$("#btnPlus").on("click", function() {
           $("#divParent").append('<label>Document ' + contor + ' </label>');
           $("#divParent").append("<div class='field'><input name='doc" + contor + "' type='text' ></div>");
           contor++;

		})
	});
</script>