

<h1>Listing Periods</h1>
<style type="text/css">
  td {
      width: 120px;
  }
</style>
<% @all_scholarships.each do |elem| %>
  <table>
    <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Buget</th>
      <th>Activ</th>
      <th>Nr stud</th>
      <th>Min salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <td><%= elem["sesiune"].start %></td>
        <td><%= elem["sesiune"].end %></td>
        <td><%= elem["sesiune"].buget %></td>
        <td><%= elem["sesiune"].activ %></td>
        <td><%= elem["sesiune"].nr_stud %></td>
        <td><%= elem["sesiune"].min_salary %></td>
        <td><%= link_to 'Vezi', elem["sesiune"] %></td>
        <td><%= link_to 'Editeaza', edit_period_path(elem["sesiune"]) %></td>
        <td><%= link_to 'Sterge sesiunea', elem["sesiune"], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
  </table>
  <br />
  <p>Bursele asignate acestei categorii</p>
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Money</th>
      <th>An de studiu</th>
      <th>Procent</th>
      <th>Specializare</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% elem["burse"].each do |domain| %>
      <tr>
        <td><%= domain.name %></td>
        <td><%= domain.money %></td>
        <td><%= domain.an_studiu %></td>
        <td><%= domain.procent %></td>
        <td><%= domain.specializare %></td>
        <td><%= link_to 'Show', domain %></td>
        <td><%= link_to 'Edit', edit_domain_path(domain) %></td>
        <td><%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br /><br />
<% end %>



