<h3>Adauga o noua stire</h3>

<br><br>
  <%= form_for(@news) do |f| %>
    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title , class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content , class:"form-control ",:rows => 10%>
    </div>
    <%= f.submit 'Posteaza anunt', :class => 'btn btn-primary'%>
  <% end %>

